<!--#コントローラから渡された@post_images変数内から1つずつ取り出して、post_image変数へ格納-->
<% music_images.each do |music_image| %>
  <div class="card">
    <h3 class="card-header"><%= music_image.music_name %></h3>
      <div class="card-body">
        <div>
          <!--#link_toでmusic_image_path(music_image.id)のリンク先URLを指定する。-->
          <%= link_to music_image_path(music_image.id) do %>
  
            <!--#refile側が用意したヘルパー、 imgタグを生成(post_image変数のimage_idに保存された画像のimgタグを生成)-->
            <%#= attachment_image_tag music_image, :image, :fill, 150, 150 %>
          <% end %>
  
          <p><%= attachment_image_tag music_image.user, :profile_image, :fill, 60, 60, fallback: "music_image.jpe" %></p>
          <p><%= music_image.user.name %></p>
  
          <%# music_images.each do |music_image| %>
            <!--#refile側が用意したヘルパー、 imgタグを生成(post_image変数のimage_idに保存された画像のimgタグを生成)-->
            <%#= attachment_image_tag music_image, :image, :fill, 150, 150 %>
          <%# end %>
      
          <p><%= music_image.caption %></p>
          <!--#post_image変数のuser_idに関連付けられているuserモデルのnameカラムを表示-->
          <p><%= link_to "#{music_image.music_comments.count} コメント", music_image_path(music_image.id) %>
          
      <%= link_to '詳細', music_image_path(music_image.id), method: :get %>
      <%#= link_to '編集', edit_music_image_path(music_image.id), method: :get %>
          
        </div>
      </div>
  </div>
<% end %>


