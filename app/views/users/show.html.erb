<!--#ユーザーのプロフィール部分-->
<div>
  <h3><%= @user.name %></h3>
  <!--#プロフィール画像の表示-->
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "music_image.jpeg" %>
  
  
  <!--#編集ページへのリンク-->
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!--#部分テンプレートの呼び出し-->
<%= render 'music_images/list', music_images: @music_images %>